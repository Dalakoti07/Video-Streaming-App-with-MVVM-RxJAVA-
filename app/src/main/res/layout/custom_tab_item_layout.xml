<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content"
                                             android:orientation="horizontal"
>
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
              tools:text="For You"
              android:id="@+id/tabTitle"
              android:textSize="16sp"
              android:textColor="#fff"
              android:fontFamily="@font/open_sans_semibold" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp" android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp"/>
    <View android:layout_width="2dp" android:layout_height="14dp"
          android:background="@color/colorAccent"
          android:layout_gravity="center"

          android:id="@+id/tabDivider"

          app:layout_constraintStart_toEndOf="@+id/tabTitle"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
          android:layout_marginTop="12dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="6dp"

    />

</android.support.constraint.ConstraintLayout>